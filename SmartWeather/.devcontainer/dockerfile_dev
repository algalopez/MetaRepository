FROM python:3.14.0-slim-trixie

# Configure apt
ENV DEBIAN_FRONTEND=noninteractive
RUN apt-get update && apt-get -y install --no-install-recommends apt-utils curl 2>&1


RUN mkdir /app
WORKDIR /app

COPY ./requirements.txt /app/
COPY ./ /app/
RUN if [ -f "requirements.txt" ]; then pip install -r requirements.txt; fi
RUN if [ -f "test/requirements.txt" ]; then pip install -r test/requirements.txt; fi

# Install Ollama
RUN curl -fsSL https://ollama.com/install.sh | sh

# Pre-download mistral:7b-instruct model for Ollama
# Start Ollama in background, pull model, then stop it
RUN echo "Downloading Ollama mistral:7b-instruct model during Docker build..." && \
    (ollama serve > /tmp/ollama.log 2>&1 &) && \
    sleep 5 && \
    ollama pull mistral:7b-instruct && \
    pkill ollama || true

# Clean up
RUN apt-get autoremove -y \
    && apt-get clean -y \
    && rm -rf /var/lib/apt/lists/*
ENV DEBIAN_FRONTEND=dialog

ENV SHELL=/bin/bash

CMD ["sleep", "infinity"]
