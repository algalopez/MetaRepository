{
    "name": "Elm Development Environment",
    "build": {
        "dockerfile": "Dockerfile",
        "context": "."
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "elmTooling.elm-ls-vscode",
                "formulahendry.code-runner"
            ],
            "settings": {
                "terminal.integrated.defaultProfile.linux": "bash"
            }
        }
    },
    "remoteUser": "vscode",
    "postCreateCommand": "elm --version",
    "forwardPorts": [8000]
}